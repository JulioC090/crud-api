{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}